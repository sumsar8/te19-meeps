{% extends layout %}
{% block  content %}
<div class="item-container">
  {% include "components/sidebar.njk" %}
<form action="/login" method="post">
            <div class="input-group mb-3">
                <label for="login" class="visually-hidden">Meep</label>
                <input
                    class="form-control"
                    type="text"
                    name="username"
                    id="username"
                    placeholder="Username"
                    required>
                <input
                    class="form-control"
                    type="text"
                    name="password"
                    id="password"
                    placeholder="Password"
                    required
                >
                <button class="btn btn-primary" type="submit">Login</button>
            </div>
        </form>
    </div>
</div>
{% endblock %}